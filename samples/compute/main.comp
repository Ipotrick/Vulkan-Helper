#version 430

layout(set = 0, binding = 0) buffer OutputBuffer {
    uint col[];
} outputBuffer;

void main() {
    uint col = 0x000000ff;

    col |= (gl_GlobalInvocationID.x / 2 & 0xff) << 0x18;
    col |= (gl_GlobalInvocationID.y / 2 & 0xff) << 0x10;

    outputBuffer.col[gl_GlobalInvocationID.x + gl_GlobalInvocationID.y * 512] = col;
}
